# ============================================
# Supabase Configuration
# ============================================

# Supabase Project URL
# Get this from: https://app.supabase.com/project/[project-id]/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# Supabase Anon Key (public)
# This key is safe to use in browser/client-side code
# Get this from: https://app.supabase.com/project/[project-id]/settings/api
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Supabase Service Role Key (secret)
# WARNING: Never expose this key in client-side code!
# Only use in server-side/backend code
# Get this from: https://app.supabase.com/project/[project-id]/settings/api
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Database URL (for migrations)
# Get this from: https://app.supabase.com/project/[project-id]/settings/database
DATABASE_URL="postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres"

# ============================================
# AI Configuration
# ============================================

# OpenAI API Key (optional)
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Claude API Key (optional)
# Get this from: https://console.anthropic.com/
CLAUDE_API_KEY="sk-ant-..."

# ============================================
# Email Configuration (Resend)
# ============================================

# Resend API Key
# Get this from: https://resend.com/api-keys
RESEND_API_KEY="re_..."

# From email address
EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# Push Notification Configuration
# ============================================

# Expo Push Token (for mobile notifications)
EXPO_PUSH_TOKEN="ExponentPushToken[...]"

# ============================================
# Application Settings
# ============================================

# Node environment
NODE_ENV="development"

# Next.js public URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Mobile app URL (for deep linking)
MOBILE_APP_URL="exp://localhost:8081"

# ============================================
# Security Settings
# ============================================

# JWT Secret (for additional security)
JWT_SECRET="your-jwt-secret-here"

# Session Secret
SESSION_SECRET="your-session-secret-here"

# ============================================
# Test Mode Configuration
# ============================================

# Enable test mode (no authentication required)
# WARNING: Only use for testing! Set to "false" in production
NEXT_PUBLIC_TEST_MODE="false"

# Test company ID (used when TEST_MODE=true)
NEXT_PUBLIC_TEST_COMPANY_ID="00000000-0000-0000-0000-000000000001"

# ============================================
# Feature Flags
# ============================================

# Enable AI quiz generation
ENABLE_AI_QUIZ_GENERATION="true"

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS="true"

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS="true"

# ============================================
# Monitoring & Analytics (Optional)
# ============================================

# Sentry DSN
SENTRY_DSN="https://..."

# Google Analytics ID
NEXT_PUBLIC_GA_ID="G-..."

# ============================================
# Development Settings
# ============================================

# Enable debug logging
DEBUG="false"

# Port settings
PORT="3000"
MOBILE_PORT="8081"